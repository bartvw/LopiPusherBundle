<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="lopi_pusher.pusher.class">Lopi\Bundle\PusherBundle\Pusher\Pusher</parameter>
        <parameter key="lopi_pusher.options" type="collection"></parameter>
    </parameters>

    <services>
		<service id="lopi_pusher.pusher" class="%lopi_pusher.pusher.class%">
		    <argument>%lopi_pusher.app.id%</argument>
		    <argument>%lopi_pusher.key%</argument>
		    <argument>%lopi_pusher.secret%</argument>
			<argument>%lopi_pusher.options%</argument>
            <argument type="service" id="lopi_pusher.serializer" />
	    </service>


        <service id="lopi_pusher.serializer" alias="serializer" />

	</services>
</container>